Bootstrap: docker
From: ubuntu:22.04

%files
    requirements.txt .

%labels
    python3 + pubsum

%post -c /bin/bash
    apt-get clean
    apt-get update
    apt update
    apt install -y python3 python3-venv python3-pip git tesseract-ocr

    python3 -m venv ./venv --system-site-packages
    source ./venv/bin/activate
    pip install -r requirements.txt

%environment
    export PATH=/venv/bin:$PATH

%runscript
    /venv/bin/python3